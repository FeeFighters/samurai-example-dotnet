@model SamuraiStore.Models.Order

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Order</legend>

        @Html.HiddenFor(model => model.OrderId)

        <div class="editor-label">
            @Html.LabelFor(model => model.ThingId, "Thing")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ThingId", String.Empty)
            @Html.ValidationMessageFor(model => model.ThingId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CreatedAt)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CreatedAt)
            @Html.ValidationMessageFor(model => model.CreatedAt)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TransactionRef)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TransactionRef)
            @Html.ValidationMessageFor(model => model.TransactionRef)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CreditRef)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CreditRef)
            @Html.ValidationMessageFor(model => model.CreditRef)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsCredited)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsCredited)
            @Html.ValidationMessageFor(model => model.IsCredited)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
